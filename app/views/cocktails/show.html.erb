<%= @cocktail.name %> <br>
<% if @cocktail.photo.present? %>
  <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
<% end %>

<%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %><br>


<% @cocktail.doses.each do |dose|  %>
  <%=  dose.description %>
  <%= dose.ingredient.name  %>

  <%= link_to "Delete a dose", dose_path(dose),
  method: :delete,
        data: { confirm: "Are you sure?" } %>

        <i class="fa fa-trash destroy_dose"></i><br>
<% end %>

<%= link_to "Home", cocktails_path %>



